@model IEnumerable<Tp3_AspNet.Presentation.Models.BookViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BookId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Isbn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Authors)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BookId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Isbn)
        </td>
        <td>
            @foreach (var item2 in item.Authors)
            {
                if (item2 != null)
                {
                    @Html.DisplayFor(modelItem => item2.FirstName)<br />
                }
            }

        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BookId }) |
            @Html.ActionLink("Details", "Details", new { id = item.BookId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.BookId }) |
            @Html.ActionLink("Add Author", "AddAuthorToBook", new { id = item.BookId }) |
            @Html.ActionLink("Remove Author", "RemoveAuthorToBook", new { id = item.BookId }) |

        </td>
    </tr>
}

</table>
